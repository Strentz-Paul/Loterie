{% extends 'base.html.twig' %}

{% block title %}Simulation Euromillion{% endblock %}

{% block body %}


<div class="container">
    <h1 class="row col-12 container">Euromillion</h1>
    <div class="row">
        {% for rawresult in loto %}
        <div class="col-3">{{ rawresult }}</div>
        {% endfor %}
    </div>

    <hr>
    <div class="row">
        <button class="btn btn-dark">Afficher le tableau des numéros</button>
        <table class="table table-dark col-5 hidden" id="tableNumbers">
            <thead>
                <tr>
                    <th scope="col">Numéro</th>
                    <th scope="col">Nombre de fois tiré</th>
                    <th scope="col">Chance de sortir</th>
                </tr>
            </thead>
            <tbody>
            {% for result in test %}
                {% for finalResult in result %}
                    <tr>
                    {% if finalResult > 0 %}
                        {% for finalResult in result|keys %}
                            <th scope="row">{{ finalResult }}</th>
                        {% endfor %}
                        {% for finalResult in result %}
                            <td>{{ finalResult }}</td>
                        {% endfor %}
                    {% endif %}
                    </tr>
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>
        <button class="btn btn-dark">Afficher le tableau des numéros chances</button>
        <table class="table table-dark col-5 offset-2 hidden" id="tableChance">
            <thead>
            <tr>
                <th scope="col">Numéro Chance</th>
                <th scope="col">Nombre de fois tiré</th>
                <th scope="col">Chance de sortir</th>
            </tr>
            </thead>
                <tbody>
                {% for result in chance %}
                    {% for finalResult in result %}
                        <tr>
                            {% if finalResult > 0  %}
                                {% for finalResult in result|keys %}
                                    <th scope="row">{{ finalResult }}</th>
                                {% endfor %}
                                {% for finalResult in result %}
                                    <td>{{ finalResult }}</td>
                                {% endfor %}
                            {% endif %}
                        </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
        </table>
    </div>
    <hr>
    <div class="row">
        <h2>Les chiffres les plus sortie</h2>

    </div>
</div>
{% endblock %}
{% block javascripts %}

{% endblock %}
